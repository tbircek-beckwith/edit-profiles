<Window x:Class="EditProfiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Path=ProgramTitle}"
        Height="550"
        Width="600"
        MinHeight="400"
        MinWidth="450"
        >

    <Window.Resources>

    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10,10,10,0"
                    Grid.Column="0"
                    Grid.Row="0">

            <TextBlock Height="20"
                       Text="{Binding Path=FindWhatLabelText}" />

            <TextBox VerticalContentAlignment="Center"
                     Height="30"
                     Margin="0,0,0,15"
                     Text="{Binding Path=FindWhatTextBoxText, 
                                    UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Height="20"
                       Text="{Binding Path=ReplaceWithLabelText}" />

            <TextBox VerticalContentAlignment="Center"
                     Height="30"
                     Margin="0,0,0,15"
                     Text="{Binding Path=ReplaceWithTextBoxText, 
                                    UpdateSourceTrigger=PropertyChanged}" />

        </StackPanel>

        <StackPanel Margin="10,10,10,0"
                    Grid.Column="1"
                    Grid.Row="0">

            <TextBlock Height="20"
                       Text="{Binding Path=PasswordLabelText}" />

            <TextBox Height="30"
                     VerticalContentAlignment="Center"
                     Text="{Binding Path=PasswordTextBoxText}" />

            <TextBlock VerticalAlignment="Center"
                       Height="20" />

            <Button Height="30"
                    Margin="0,15,0,0"
                    Content="{Binding Path=FindReplaceButtonText}"
                    Command="{Binding Path=FindReplaceCommand}" />

        </StackPanel>

        <StackPanel  Margin="10,10,10,5"
                     Grid.Column="0"
                     Grid.Row="2"
                     Orientation="Horizontal">

            <TextBlock Height="20"
                       Margin="5"
                       Text="{Binding Path=ProcessFiles}" />

            <ProgressBar Height="20"
                         Width="100" />

        </StackPanel>

        <StackPanel  Margin="10,10,10,5"
                     Grid.Column="1"
                     Grid.Row="2"
                     Orientation="Horizontal">

            <TextBlock Height="20"
                       Margin="5"
                       Text="{Binding Path=ProcessFiles}" />

            <ProgressBar Height="20"
                         Width="100" />

        </StackPanel>

        <TextBox Margin="10,0,10,5"
                 Grid.Column="0"
                 Grid.Row="1"
                 Grid.ColumnSpan="2"
                 IsReadOnly="True"
                 Text="{Binding Path=DetailsTextBoxText}" />
        <!--,-->
        <!--UpdateSourceTrigger=PropertyChanged}" />-->

        <!--<TextBox Margin="10,0,10,5"
                 Grid.Column="1"
                 Grid.Row="1"
                 IsReadOnly="True"
                 Text="{Binding Path=OverviewTextBoxText, 
                                  UpdateSourceTrigger=PropertyChanged}"
                 DataContext="{Binding}" />-->
    </Grid>
</Window>
